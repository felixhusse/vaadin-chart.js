<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>CUSTOM-Run Jetty</actionName>
            <displayName>Run Jetty</displayName>
            <goals>
                <goal>jetty:run</goal>
            </goals>
            <properties>
                <Env.MAVEN_OPTS>-javaagent:c:/jrebel/jrebel.jar</Env.MAVEN_OPTS>
            </properties>
        </action>
        <action>
            <actionName>CUSTOM-Stop Jetty</actionName>
            <displayName>Stop Jetty</displayName>
            <goals>
                <goal>jetty:stop</goal>
            </goals>
        </action>
        <action>
            <actionName>CUSTOM-compile-theme</actionName>
            <displayName>compile-theme</displayName>
            <goals>
                <goal>vaadin:compile-theme</goal>
            </goals>
        </action>
        <action>
            <actionName>CUSTOM-jrebel-generate</actionName>
            <displayName>jrebel-generate</displayName>
            <goals>
                <goal>jrebel:generate</goal>
            </goals>
        </action>
        <action>
            <actionName>rebuild</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>clean</goal>
                <goal>install</goal>
                <goal>-U</goal>
            </goals>
        </action>
    </actions>
